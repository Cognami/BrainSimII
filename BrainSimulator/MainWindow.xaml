<Window x:Class="BrainSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrainSimulator"
        mc:Ignorable="d"
        Title="Brain Simulator II" Height="520.771" Width="756.667" KeyUp="Window_KeyUp" KeyDown="Window_KeyDown" Closing="Window_Closing" Loaded="Window_Loaded">
    <Grid Margin="0,0,3.4,1.2">
        <DockPanel VerticalAlignment="Top">
            <Menu DockPanel.Dock="Top" x:Name="MainMenu" MouseEnter="MainMenu_MouseEnter" Height="26" Margin="0,0" VerticalAlignment="Top" >
                <MenuItem Header="_File">
                    <MenuItem Header="_New" Click="button_FileNew_Click"/>
                    <MenuItem Header="_Open" Click="buttonLoad_Click"/>
                    <MenuItem Header="_Insert" Click="button_PatternLoad_Click"/>
                    <MenuItem Header="_Save" Click="buttonSave_Click"/>
                    <MenuItem Header="Save _As" Click="buttonSaveAs_Click"/>
                    <Separator />
                    <MenuItem Header="_Exit" Click="button_Exit_Click"/>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header=" Undo" Click="button_Undo_Click"/>
                    <MenuItem Header=" Cut"  Click="MenuItem_CutNeurons" />
                    <MenuItem Header=" Copy"  Click="MenuItem_CopyNeurons" />
                    <MenuItem Header=" Paste"  Click="MenuItem_PasteNeurons" />
                    <MenuItem Header=" Delete"  Click="MenuItem_DeleteNeurons" />
                    <MenuItem Header=" Move" Click="MenuItem_MoveNeurons" />
                    <Separator />
                    <MenuItem Header=" Save Selection to File" Click="button_ClipboardSave_Click"/>
                </MenuItem>
                <MenuItem Header=" Learn">
                    <MenuItem Header="Hebbian" Click="MenuItem_Hebbian_Click"/>
                    <MenuItem Header="One-Shot" Click="MenuItem_Learn_Click"/>
                    <MenuItem Header="Mutual Suppression" Click="MenuItem_MutualSuppression_Click"/>
                </MenuItem>
                <MenuItem Header=" Help">
                    <MenuItem Header="About" Click="Button_HelpAbout_Click"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <RadioButton x:Name="radioButtonSynapse" Content="Synapse" HorizontalAlignment="Left" Margin="44,94,0,0" VerticalAlignment="Top" Height="15" Checked="radioButton_Checked" />
        <RadioButton x:Name="radioButtonNeuron" Content="Neuron" HorizontalAlignment="Left" Margin="44,114,0,0" VerticalAlignment="Top" Height="15" Checked="radioButton_Checked" />
        <RadioButton x:Name="radioButtonSelect" Content="Select" HorizontalAlignment="Left" Margin="44,134,0,0" VerticalAlignment="Top" Height="15" Checked="radioButton_Checked" />
        <RadioButton x:Name="radioButtonPan" Content="Pan" HorizontalAlignment="Left" Margin="44,154,0,0" VerticalAlignment="Top" IsChecked="True" Checked="radioButton_Checked" />
        <local:NeuronArrayView x:Name="theNeuronArrayView" Margin="152,88,27,34" ClipToBounds="True" />
        <Slider x:Name="slider" Margin="7,0,0,61" ValueChanged="slider_ValueChanged" IsSnapToTickEnabled="True" Value="0" HorizontalAlignment="Left" Width="140" Height="24" VerticalAlignment="Bottom"/>
        <Button x:Name="buttonSingle" Content="Single Step" Margin="39,0,0,108" Click="ButtonSingle_Click" HorizontalAlignment="Left" Width="70" Height="31" VerticalAlignment="Bottom"/>
        <Label x:Name="label" Content="Label" Margin="7,0,0,0" HorizontalAlignment="Left" Width="200" Height="34" VerticalAlignment="Bottom"/>
        <Label x:Name="labelDisplayStatus" Content="Initializing
               " Margin="258,0,0,0" HorizontalAlignment="Left" Width="462" Height="34" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
